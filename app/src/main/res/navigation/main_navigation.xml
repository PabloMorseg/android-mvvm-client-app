<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_navigation"
    app:startDestination="@id/songsListFragment">

    <fragment
        android:id="@+id/songsListFragment"
        android:name="com.udemy.my_songs.ui.SongsListFragment"
        android:label="SongsListFragment" >
        <action
            android:id="@+id/action_to_addSongFragment"
            app:destination="@+id/addSongFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/addSongFragment"
        android:name="com.udemy.my_songs.ui.AddSongFragment"
        android:label="AddSongFragment" />
</navigation>